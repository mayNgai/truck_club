<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuay.service_transport.dtc.example.tuay.service_transport.LoginAndRegister.RegisterDriver">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout2"
        android:padding="@dimen/margin_10"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Car Info"
                        android:textSize="@dimen/font_22"
                        android:textColor="@color/Gray11"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_car_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/Driver_Vehicle_ฺBrand"
                            android:textSize="@dimen/font_18"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPersonName"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_car_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/Driver_Vehicle_ฺModel"
                            android:textSize="@dimen/font_18"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPersonName"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_license_plate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/Driver_Vehicle_ฺID"
                            android:textSize="@dimen/font_18"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPersonName"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_license_province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/Driver_province"
                            android:textSize="@dimen/font_18"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPersonName"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type of car"
                        android:textSize="@dimen/font_22"
                        android:textColor="@color/Gray11"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <Spinner
                        android:id="@+id/spn_car_group"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/font_18"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_group_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/linear_tow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:layout_weight="2.5"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">
                            <Spinner
                                android:id="@+id/spn_tow"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/font_18"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="พ่วง"
                            android:textSize="@dimen/font_18"
                            android:textStyle="bold"
                            android:layout_weight="0.5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:layout_weight="2.5"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">
                            <EditText
                                android:id="@+id/edt_sum1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:hint="กรุณาใส่จำนวน"
                                android:gravity="center_horizontal|center_vertical"
                                android:textAlignment="center"
                                android:textSize="@dimen/font_18"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="numberDecimal"
                                android:maxLength="2"
                                android:background="@null"/>
                            <Spinner
                                android:id="@+id/spn_sum1"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/font_18"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="ล้อ"
                            android:textSize="@dimen/font_18"
                            android:textStyle="bold"
                            android:layout_weight="0.5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:layout_weight="2.5"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">
                            <EditText
                                android:id="@+id/edt_sum2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:hint="กรุณาใส่จำนวน"
                                android:gravity="center_horizontal|center_vertical"
                                android:textAlignment="center"
                                android:textSize="@dimen/font_18"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="numberDecimal"
                                android:maxLength="3"
                                android:background="@null"/>
                            <Spinner
                                android:id="@+id/spn_weight"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/font_18"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txt_weight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="ตัน"
                            android:textSize="@dimen/font_18"
                            android:textStyle="bold"
                            android:layout_weight="0.5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <CheckBox
                            android:id="@+id/chk_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ไม่รวมน้ำหนัก"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="visible">
                        <CheckBox
                            android:id="@+id/chk_option"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="พื้นเรียบ"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone">
                    <Spinner
                        android:id="@+id/spn_geo"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/font_18"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone">
                    <Spinner
                        android:id="@+id/spn_province"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/font_18"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>