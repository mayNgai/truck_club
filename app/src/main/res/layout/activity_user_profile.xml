<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:id="@+id/bg_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_90"
        android:layout_marginTop="@dimen/margin_top_head"
        android:background="@color/actionBar"/>
    <LinearLayout
        android:id="@+id/profileEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_below="@+id/bg_head"
        android:background="@color/WhiteSmoke"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/edtlayoutHead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:weightSum="5"
            android:paddingTop="@dimen/button_confirm"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/buttonshape_find_location_search_white"
                android:weightSum="4"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_account_circle_black_24dp"/>
                <EditText
                    android:id="@+id/EdtNameUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_20"
                    android:maxLength="20"
                    android:background="@null"
                    android:textColor="@color/DarkGray"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:text=""
                    android:enabled="false"/>
                <ImageView
                    android:id="@+id/imvNameUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/cancel_button"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/buttonshape_find_location_search_white"
                android:layout_weight="1"
                android:weightSum="4">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_cake_black_24dp"/>
                <EditText
                    android:id="@+id/EdtBirthDayUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="Birth Day"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_20"
                    android:background="@null"
                    android:textColor="@color/DarkGray"
                    android:gravity="center"
                    android:enabled="false"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/buttonshape_find_location_search_white"
                android:weightSum="4"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_smartphone_black_24dp"/>
                <EditText
                    android:id="@+id/EdtTelUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Tel"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_20"
                    android:maxLength="10"
                    android:textColor="@color/DarkGray"
                    android:background="@null"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:enabled="false"/>
                <ImageView
                    android:id="@+id/imvTelUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/cancel_button"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/button_confirm"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">
            <LinearLayout
                android:id="@+id/linear_user_name_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_40"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/linear_user_name"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/UserUsernameEdt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColorHint="@color/DarkGray"
                        android:hint="@string/txt_username"
                        android:textSize="@dimen/font_16"
                        android:inputType="text"
                        android:background="@null"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_face_book_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_40"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/linear_first_name"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColorHint="@color/DarkGray"
                        android:hint="@string/txt_first_name"
                        android:textSize="@dimen/font_16"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_40"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/linear_last_name"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edt_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColorHint="@color/DarkGray"
                        android:hint="@string/txt_last_name"
                        android:textSize="@dimen/font_16"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_40"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/linear_email"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColorHint="@color/DarkGray"
                        android:hint="@string/txt_email"
                        android:textSize="@dimen/font_16"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@null"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_tel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_40"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/buttonshape_find_location_search_white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edt_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:ems="10"
                    android:hint="@string/txt_phone_number"
                    android:textSize="@dimen/font_16"
                    android:maxLength="10"
                    android:textColorHint="@color/DarkGray"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_40"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/linearLayout37"
                android:background="@drawable/buttonshape_find_location_search_white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edt_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/txt_select_date"
                    android:textSize="@dimen/font_16"
                    android:textColorHint="@color/DarkGray"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:enabled="false"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/lay_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:enabled="false"
                    android:layout_marginRight="30dp">
                    <ImageView
                        android:id="@+id/img_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_female_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_18"
                        android:text="female"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:enabled="false"
                    android:gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:id="@+id/img_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_men_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_18"
                        android:text="male"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/margin_image_size_profile"
        android:layout_height="@dimen/margin_image_size_profile"
        android:layout_marginTop="@dimen/hight_40"
        android:clickable="true"
        android:src="@drawable/no_images"
        app:border_color="#FF000000"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>