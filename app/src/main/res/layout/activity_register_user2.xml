<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:layout_above="@+id/linearLayout32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/layOutHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:layout_marginTop="@dimen/margin_50"
                    android:background="@drawable/buttonshape_find_location_search_white"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_register"
                    android:layout_above="@+id/linearLayout36"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_18"
                        android:text="ข้อมูลส่วนตัว"/>

                    <LinearLayout
                        android:id="@+id/groupHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/linear_user_name_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/hight_30"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|center_vertical"
                                android:id="@+id/linear_user_name"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginTop="10dp">

                                <EditText
                                    android:id="@+id/UserUsernameEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColorHint="@color/DarkGray"
                                    android:hint="@string/txt_username"
                                    android:textSize="@dimen/font_16"
                                    android:inputType="textPersonName"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_face_book_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/hight_30"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|center_vertical"
                                android:id="@+id/linear_first_name"
                                android:background="@drawable/buttonshape_find_location_search_white"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginTop="10dp">

                                <EditText
                                    android:id="@+id/UserFirstnameEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColorHint="@color/DarkGray"
                                    android:hint="@string/txt_first_name"
                                    android:textSize="@dimen/font_16"
                                    android:inputType="textPersonName"
                                    android:background="@null"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/hight_30"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|center_vertical"
                                android:id="@+id/linear_last_name"
                                android:background="@drawable/buttonshape_find_location_search_white"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginTop="10dp">

                                <EditText
                                    android:id="@+id/UserLastnameEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColorHint="@color/DarkGray"
                                    android:hint="@string/txt_last_name"
                                    android:textSize="@dimen/font_16"
                                    android:inputType="textPersonName"
                                    android:background="@null"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/hight_30"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|center_vertical"
                                android:id="@+id/linear_email"
                                android:background="@drawable/buttonshape_find_location_search_white"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginTop="10dp">

                                <EditText
                                    android:id="@+id/UserEmailEdt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:textColorHint="@color/DarkGray"
                                    android:hint="@string/txt_email"
                                    android:textSize="@dimen/font_16"
                                    android:inputType="textPersonName"
                                    android:background="@null"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_tel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hight_30"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/UserPhoneEdt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal|center_vertical"
                                android:ems="10"
                                android:hint="@string/txt_phone_number"
                                android:textSize="@dimen/font_16"
                                android:maxLength="10"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="numberDecimal"
                                android:background="@null"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hight_30"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:id="@+id/linearLayout37"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/UserBirthEdt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:gravity="center_horizontal|center_vertical"
                                android:hint="@string/txt_select_date"
                                android:textSize="@dimen/font_16"
                                android:textColorHint="@color/DarkGray"
                                android:focusableInTouchMode="false"
                                android:inputType="number"
                                android:background="@null"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="10dp"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:id="@+id/lay_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_marginRight="30dp">
                                <ImageView
                                    android:id="@+id/img_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_female_black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/font_18"
                                    android:text="female"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lay_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal|center_vertical">
                                <ImageView
                                    android:id="@+id/img_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_men_gray"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/font_18"
                                    android:text="male"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_group_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_18"
                            android:text="ตั้งค่ารหัสผ่าน"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hight_30"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:id="@+id/linear_pass"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/UserPasswordEdt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:gravity="center_horizontal|center_vertical"
                                android:hint="@string/txt_numberlic"
                                android:inputType="numberPassword"
                                android:textColorHint="@color/DarkGray"
                                android:textSize="@dimen/font_16"
                                android:background="@null"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hight_30"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:id="@+id/linear_confirm_pass"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/buttonshape_find_location_search_white"
                            android:layout_marginBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="10dp">

                            <EditText
                                android:id="@+id/UserConfirmPasswordEdt"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:hint="@string/txt_confirm_pass"
                                android:textSize="@dimen/font_16"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="numberPassword"
                                android:background="@null"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:id="@+id/linearLayout36"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/User_Pic_ProfileIm"
                                android:layout_width="@dimen/margin_image_size_profile_register"
                                android:layout_height="@dimen/margin_image_size_profile_register"
                                android:src="@drawable/no_images" />

                            <ImageButton
                                android:id="@+id/ChoosePicBtn"
                                android:layout_width="@dimen/margin_top_head"
                                android:layout_height="@dimen/margin_top_head"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30dp"
                                android:textSize="@dimen/font_16"
                                android:src="@drawable/choose_pic"
                                android:background="@drawable/button_cricle"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/margin_image_size_profile"
                android:layout_height="@dimen/margin_image_size_profile"
                android:clickable="true"
                android:src="@drawable/no_images"
                app:border_color="#FF000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/UserConfirmRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_margin="5sp"
            android:textSize="@dimen/font_16"
            android:background="@drawable/buttonshape_orange"
            android:textColor="@color/WhiteSmoke" />

    </LinearLayout>

</RelativeLayout>

