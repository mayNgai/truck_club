<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuay.service_transport.dtc.example.tuay.service_transport.LoginAndRegister.RegisterDriver">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout2"
        android:padding="@dimen/margin_10"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textSize="@dimen/font_22"
                    android:textColor="@color/Gray11"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/txt_username"
                            android:textSize="@dimen/font_18"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPersonName"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/MyHintText">

                            <EditText
                                android:id="@+id/edt_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="@string/txt_first_name"
                                android:textSize="@dimen/font_18"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="textPersonName"
                                android:theme="@style/MyEditText"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/MyHintText">

                            <EditText
                                android:id="@+id/edt_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:ems="10"
                                android:hint="@string/txt_last_name"
                                android:textSize="@dimen/font_18"
                                android:textColorHint="@color/DarkGray"
                                android:inputType="textPersonName"
                                android:theme="@style/MyEditText"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>



                <!--<LinearLayout-->
                    <!--android:id="@+id/linearLayout4"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:layout_marginTop="10dp">-->
                    <!--<android.support.design.widget.TextInputLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:hintTextAppearance="@style/MyHintText">-->
                        <!--<EditText-->
                            <!--android:id="@+id/Edt_Driver_user_name"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="left|center_vertical"-->
                            <!--android:ems="10"-->
                            <!--android:textSize="@dimen/font_18"-->
                            <!--android:hint="@string/Driver_Nickname"-->
                            <!--android:textColorHint="@color/DarkGray"-->
                            <!--android:inputType="textPersonName"-->
                            <!--android:theme="@style/MyEditText"/>-->
                    <!--</android.support.design.widget.TextInputLayout>-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">
                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:ems="10"
                            android:textSize="@dimen/font_18"
                            android:hint="@string/Driver_Email"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textEmailAddress"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">
                        <EditText
                            android:id="@+id/edt_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:ems="10"
                            android:maxLength="10"
                            android:textSize="@dimen/font_18"
                            android:hint="@string/Driver_Tel"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="number"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/txt_date_of_birth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/black_1"
                        android:hint="เลือกวันเกิด"
                        android:background="@drawable/buttonshape_find_location_search_white"
                        android:textSize="@dimen/font_18"
                        android:textColorHint="@color/DarkGray"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:clickable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/buttonshape_find_location_search_white"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/spn_sex"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Your Password"
                        android:textSize="@dimen/font_22"
                        android:textColor="@color/Gray11"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:theme="@style/MyEditText"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">

                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/font_18"
                            android:ems="10"
                            android:hint="8-15 numberlic"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="numberPassword"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHintText">
                        <EditText
                            android:id="@+id/edt_confirm_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/font_18"
                            android:ems="10"
                            android:hint="@string/Driver_ConfirmPassword"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="numberPassword"
                            android:theme="@style/MyEditText"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/DriverNextPageRegisterBtn"
        android:layout_width="@dimen/button_confirm"
        android:layout_height="@dimen/button_confirm"
        android:layout_weight="1"
        android:background="@drawable/next_green"
        android:textSize="15dp"
        android:visibility="invisible"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        />
</RelativeLayout>
